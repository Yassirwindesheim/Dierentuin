@model Dierentuin.Models.Animal

@{
    ViewData["Title"] = "Edit Animal";
}

<h1>Edit Animal</h1>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActivityPattern" class="control-label">Activity Pattern</label>
        <select asp-for="ActivityPattern" asp-items="ViewBag.ActivityPatterns" class="form-control"></select>
        <span asp-validation-for="ActivityPattern" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Diet" class="control-label">Diet</label>
        <select asp-for="Diet" asp-items="ViewBag.Diets" class="form-control"></select>
        <span asp-validation-for="Diet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EnclosureId" class="control-label">Enclosure</label>
        <select asp-for="EnclosureId" asp-items="ViewBag.Enclosures" class="form-control"></select>
        <span asp-validation-for="EnclosureId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SecurityRequirement" class="control-label">Security Requirement</label>
        <input asp-for="SecurityRequirement" class="form-control" />
        <span asp-validation-for="SecurityRequirement" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SpaceRequirement" class="control-label">Space Requirement</label>
        <input asp-for="SpaceRequirement" class="form-control" />
        <span asp-validation-for="SpaceRequirement" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Size" class="control-label">Size</label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Species" class="control-label">Species</label>
        <input asp-for="Species" class="form-control" />
        <span asp-validation-for="Species" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
