        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
        {
            <div class="text-danger">
                @foreach (var error in ViewData.ModelState["Name"].Errors)
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>

    <div class="form-group">
        <label for="ActivityPattern">Activity Pattern</label>
        <select class="form-control" id="ActivityPattern" name="ActivityPattern">
