@model Dierentuin.Models.Category

@{
    ViewData["Title"] = "Update Category";
}

<h2>Update Category</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="AnimalIds">Select Animals</label>
        <select asp-for="AnimalIds" asp-items="ViewBag.Animals" class="form-control" multiple>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
