@model Dierentuin.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<h2>Create Category</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="AnimalIds">Animals</label>
        <!-- MultiSelect dropdown where animals can be selected -->
        <select asp-for="AnimalIds" asp-items="ViewBag.Animals" class="form-control" multiple="multiple">
            <option value="">Select animals</option> <!-- Placeholder when nothing is selected -->
        </select>
        <span asp-validation-for="AnimalIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
