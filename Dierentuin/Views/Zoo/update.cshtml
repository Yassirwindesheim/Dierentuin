@model Dierentuin.Models.Zoo

@{
    ViewData["Title"] = "Edit Zoo";
}

<div class="min-h-screen bg-gradient-to-b from-green-50 to-green-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="px-6 py-5">
                <h2 class="text-3xl font-extrabold text-green-800 mb-6">Edit Zoo</h2>

                <form asp-action="Update" method="post">
                    <div class="space-y-6">
                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Zoo Name</label>
                            <input asp-for="Name"
                                   class="py-3 px-4 block w-full text-base border-2 border-gray-300 focus:ring-green-500 focus:border-green-500 rounded-md transition duration-200 ease-in-out" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Animals Dropdown -->
                        <div>
                            <label for="AnimalIds" class="block text-sm font-medium text-gray-700">Select Animals</label>
                            <select asp-for="AnimalIds"
                                    asp-items="ViewBag.Animals"
                                    class="select2 shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 rounded-md"
                                    multiple="multiple">
                            </select>
                            <p class="mt-2 text-sm text-gray-500">Hold Ctrl (or Cmd) to select multiple animals.</p>
                            <span asp-validation-for="AnimalIds" class="text-danger"></span>
                        </div>

                        <!-- Enclosures Dropdown -->
                        <div>
                            <label for="EnclosureIds" class="block text-sm font-medium text-gray-700">Select Enclosures</label>
                            <select asp-for="EnclosureIds"
                                    asp-items="ViewBag.Enclosures"
                                    class="select2 shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 rounded-md"
                                    multiple="multiple">
                            </select>
                            <p class="mt-2 text-sm text-gray-500">Hold Ctrl (or Cmd) to select multiple enclosures.</p>
                            <span asp-validation-for="EnclosureIds" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>

                @section Scripts {
                    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
                    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
                    <script>
                        $(document).ready(function () {
                            $('.select2').select2({
                                placeholder: "Select animals or enclosures",
                                allowClear: true,
                                width: '100%'
                            });
                        });
                    </script>
                }
            </div>
        </div>
    </div>
</div>
