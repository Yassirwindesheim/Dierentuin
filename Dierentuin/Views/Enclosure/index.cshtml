@model IEnumerable<Dierentuin.Models.Enclosure>

@{
    ViewData["Title"] = "Enclosures";
}

<!-- Main Container -->
<div class="bg-gradient-to-b from-green-50 to-green-100 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Title Section -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-green-800 sm:text-5xl md:text-6xl">
                Enclosures
            </h1>
            <p class="mt-3 max-w-md mx-auto text-base text-green-700 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                Manage and explore the various enclosures in our zoo.
            </p>
        </div>

        <!-- Create New Enclosure Button -->
        <div class="flex justify-end mb-8">
            <a href="@Url.Action("Create")" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out transform hover:-translate-y-1 hover:scale-105">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Create New Enclosure
            </a>
        </div>

        <!-- Table Container -->
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Climate</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Habitat Type</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Security Level</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Animals</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var enclosure in Model)
                    {
                        // Deriving capacity (number of animals)
                        var capacity = enclosure.Animals?.Count() ?? 0;

                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="px-6 py-4 whitespace-nowrap">@enclosure.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap">@enclosure.Climate</td>
                            <td class="px-6 py-4 whitespace-nowrap">@enclosure.HabitatType</td>
                            <td class="px-6 py-4 whitespace-nowrap">@enclosure.SecurityLevel</td>
                            <td class="px=6 py=4 whitespace-nowrap">@capacity</td>
                            <td class="px=6 py=4 whitespace-nowrap">
                                <!-- Details Button -->
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <a href="@Url.Action("Details", new { id = enclosure.Id })" class="text-indigo-600 hover:text-indigo-900 mr-4">Details</a>
                                <a href="@Url.Action("Update", new { id = enclosure.Id })" class="text-yellow-600 hover:text-yellow-900 mr-4">Update</a>
                                <a href="@Url.Action("Delete", new { id = enclosure.Id })" class="text-red-600 hover:text-red-900">Delete</a>
                            </td>
                       
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <p class="mt=4 text-lg text-gray500">No enclosures found.</p>
        }
    </div>
</div>

<!-- Decorative Elements -->
<div class="fixed bottom-[10%] left-[5%] w-full h-[10%] bg-green800 opacity-[0.05] z-[0]"></div>
<div class="fixed top-[10%] right-[5%] w-[15%] h-[15%] bg-yellow400 rounded-full mix-blend-multiply filter blur-xl opacity-[0.20] animate-blobs"></div>
<div class="fixed top-[5%] left-[5%] w-[20%] h-[20%] bg-green400 rounded-full mix-blend-multiply filter blur-xl opacity-[0.20] animate-blobs animation-delay-[2000ms]"></div>

