@model Dierentuin.Models.Enclosure

@{
    ViewData["Title"] = "Create Enclosure";
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Enclosure Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Climate">Climate</label>
        <select asp-for="Climate" asp-items="ViewBag.Climates" class="form-control">
            <option value="">Select a climate</option>
        </select>
        <span asp-validation-for="Climate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HabitatType">Habitat Type</label>
        <select asp-for="HabitatType" asp-items="ViewBag.HabitatTypes" class="form-control">
            <option value="">Select habitat type</option>
        </select>
        <span asp-validation-for="HabitatType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SecurityLevel">Security Level</label>
        <select asp-for="SecurityLevel" asp-items="ViewBag.SecurityLevels" class="form-control">
            <option value="">Select a security level</option>
        </select>
        <span asp-validation-for="SecurityLevel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Size">Size (Square Meters)</label>
        <input asp-for="Size" class="form-control" type="number" min="0" step="any" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
