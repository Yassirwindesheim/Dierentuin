@model Dierentuin.Models.Enclosure

@{
    ViewData["Title"] = "Create Enclosure";
}

<div class="min-h-screen bg-gradient-to-b from-green-50 to-green-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:p-6">
                <h2 class="text-3xl font-extrabold text-green-800 mb-6">Create New Enclosure</h2>

                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="space-y-6">
                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Enclosure Name</label>
                            <input asp-for="Name"
                                   class="py-3 px-4 block w-full text-base border-2 border-gray-300 focus:ring-green-500 focus:border-green-500 rounded-md transition duration-200 ease-in-out"
                                   required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="Climate" class="block text-sm font-medium text-gray-700">Climate</label>
                            <select asp-for="Climate" asp-items="ViewBag.Climates"
                                    class="py-3 px-4 block w-full text-base border-2 border-gray-300 focus:ring-green-500 focus:border-green-500 rounded-md transition duration-200 ease-in-out">
                                <option value="">Select a climate</option>
                            </select>
                            <span asp-validation-for="Climate" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="HabitatType" class="block text-sm font-medium text-gray-700">Habitat Type</label>
                            <select asp-for="HabitatType" asp-items="ViewBag.HabitatTypes"
                                    class="py-3 px-4 block w-full text-base border-2 border-gray-300 focus:ring-green-500 focus:border-green-500 rounded-md transition duration=200 ease-in-out">
                                <option value="">Select habitat type</option>
                            </select>
                            <span asp-validation-for="HabitatType" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="SecurityLevel" class="block text-sm font-medium text-gray-700">Security Level</label>
                            <select asp-for="SecurityLevel" asp-items="ViewBag.SecurityLevels"
                                    class="py-3 px-4 block w-full text-base border-2 border-gray-300 focus:ring-green-500 focus:border-green-500 rounded-md transition duration=200 ease-in-out">
                                <option value="">Select a security level</option>
                            </select>
                            <span asp-validation-for="SecurityLevel" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="Size" class="block text-sm font-medium text-gray-700">Size (Square Meters)</label>
                            <input asp-for="Size"
                                   class="py-3 px-4 block w-full text-base border-2 border-gray300 focus:ring-green500 focus:border-green500 rounded-md transition duration=200 ease-in-out"
                                   type="number" min="0" step="any" />
                            <span asp-validation-for="Size" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AnimalIds">Animals</label>
                            <!-- MultiSelect dropdown with Select2 styling -->
                            <select asp-for="AnimalIds" asp-items="ViewBag.Animals" class="form-control select2" multiple="multiple">
                            </select>
                            <span asp-validation-for="AnimalIds" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>

                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
                    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
                    <script>
                        $(document).ready(function () {
                            $('.select2').select2({
                                placeholder: "Select animals",
                                allowClear: true
                            });
                        });
                    </script>
                }
}
